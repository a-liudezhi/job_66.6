<div class="col-md-12">
 <h2 class="text-center"> 我收藏的职位 </h2>

  <table class="table table-boldered table-striped custab " >
    <thead>
        <tr class="btn-danger">
            <td>职位名称</td>
            <td>品牌名称</td>
            <td>薪资情况</td>
            <td>工作地点</td>
            <td>最后更新</td>
            <td>发布者</td>
            <td>管理选项</td>
        </tr>
    </thead>

    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td>
                <%= link_to(job.title, account_jobs_path(job)) %>
            </td>
            <td>
              <%= job.brand %>
            </td>
            <td class="  ">
                <%= job.wage_lower_bound %>k
                ~
                <%= job.wage_upper_bound %>k
            </td>
            <td>
                  <span class="fa fa-map-marker"></span>
                  <%= job.location %>
            </td>
            <td>
                <%= job.updated_at %>
             </td>
             <td>
               <%= job.user.email %>
             </td>
             <td>
               <%= Job.count %>
            </td>
          </tr>
        <% end %>
    </tbody>

    <div class="dropdown clearfix pull-right">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          排序
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
            <li>
              <%= link_to("按照薪资最低排序", account_jobs_path(:order => "by_lower_bound")) %>
            </li>
            <li>
                <%= link_to("按照薪资最高排序", account_jobs_path(:order => "by_upper_bound")) %>
            </li>
            <li>
              <%= link_to("按照最后更新排序", account_jobs_path ) %>
            </li>
        </ul>
    </div>
  </table>

</div>
