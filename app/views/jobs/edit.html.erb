<h1> Edit a job </h1>

<%= simple_form_for @job do |f| %>

<%= f.input :title, :label => "职位名称" %>
<%= f.input :brand, :label => "品牌名称" %>
<%= f.input :description,:label => "招聘详情" %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :location, :label => "工作地点" %>
<%= f.input :contact_email, :label => "联系邮箱" %>
<%= f.input :is_hidden %>
  <%= f.submit "提交" %>
<% end %>
